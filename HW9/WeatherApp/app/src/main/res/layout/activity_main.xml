<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/first_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:id="@+id/first_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:alpha="50"
            android:onClick="goToTabs"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardBackgroundColor="#191919"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="0dp">

                <ImageView
                    android:id="@+id/first_card_icon"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_marginLeft="50dp"
                    android:padding="0dp"
                    android:src="@drawable/partly_cloudy_day" />

                <TextView
                    android:id="@+id/first_card_temperature"
                    android:textStyle="bold"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="200dp"
                    android:text="T51F"
                    android:textColor="#FFFFFF"
                    android:textSize="36dp" />

                <TextView
                    android:id="@+id/first_card_summary"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="40dp"
                    android:text="TClear"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/first_card_city"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="110dp"
                    android:layout_marginRight="10dp"
                    android:text="TLA"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="360dp"
                    android:layout_marginTop="115dp"
                    android:padding="0dp"
                    app:srcCompat="@drawable/information" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/second_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:alpha="50"
            app:cardBackgroundColor="#191919"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="0dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:padding="0dp"
                    app:srcCompat="@drawable/card_humidity" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="115dp"
                    android:padding="0dp"
                    app:srcCompat="@drawable/card_wind" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="215dp"
                    android:padding="0dp"
                    app:srcCompat="@drawable/card_visibility" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="310dp"
                    android:padding="0dp"
                    app:srcCompat="@drawable/card_pressure" />


                <TextView
                    android:id="@+id/second_card_humidity"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="60dp"
                    android:text="T79%"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/second_card_wind"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="100dp"
                    android:text="T0.17 mph"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/second_card_visibility"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="200dp"
                    android:text="T9.33 km"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="300dp"
                    android:layout_marginTop="90dp"
                    android:text="Pressure"
                    android:textAlignment="center"
                    android:textColor="#8D8D8D"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="90dp"
                    android:text="Humidity"
                    android:textColor="#8D8D8D"
                    android:textSize="16dp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="100dp"
                    android:text="Wind Speed"
                    android:textColor="#8D8D8D"
                    android:textSize="16dp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="200dp"
                    android:text="Visibility"
                    android:textColor="#8D8D8D"
                    android:textSize="16dp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/second_card_pressure"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="300dp"
                    android:text="T1015.80 mb"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"
                    android:textAlignment="center"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/third_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:alpha="50"
            app:cardBackgroundColor="#191919"
            app:cardCornerRadius="10dp">


            <ListView
                android:id="@+id/third_card_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#2F303A"
                android:dividerHeight="1dip">>
            </ListView>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</LinearLayout>